{
	"compilerOptions": {
		"moduleResolution": "node",
    "jsx": "react",
		"noImplicitAny": true,
		"strict": true,
		"lib": [
			"DOM",
			"es2018",
			"dom.iterable"
		],
		"module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"types/*": ["./types/*"],
		},
		"typeRoots": [
			"./declarations.d.ts",
			"./src/react.declarations.d.ts",
			"./node_modules/@types/*"
		],
		"types": [
			"@types/jest"
		]
	},
	"exclude": [
    "node_modules",
		"build"
	]
}
